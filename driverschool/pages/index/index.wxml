<!--index.wxml-->
<view class="pages">
  <view class="index-header index-row justify-content">
    <view class="index-header-title">
      <text>{{name}}</text>
      <text class="desc">专业机动车驾驶员培训</text>
    </view>
    <image src="{{logo}}" class="index-header-logo"></image>
  </view>

  <view class="index-introduce index-row">
    <text class="index-introduce-slogan">训练基地直招、方便快捷</text>
    <navigator url="../detail/detail" class="index-introduce-navigater">关于我们</navigator>
  </view>

  <view class="index-schoolInfo index-row">
      <view class="index-schoolInfo-item" catchtap="openMap">
        <text class="index-schoolInfo-icon flex-grow-1 iconfont icon-dingwei"></text>
        <text class="index-min-width flex-grow-3">{{address}}</text>
        <text class="index-schoolInfo-icon flex-grow-1 iconfont icon-qianjin-copy"></text>
      </view>
      <view class="index-schoolInfo-item ">
        <text class="index-schoolInfo-icon flex-grow-1 iconfont icon-shijian"></text>
        <text class="flex-grow-3">{{timeText}}</text>
      </view>
      <view class="index-schoolInfo-item" catchtap="makePhoneCall">
        <text class="index-schoolInfo-icon flex-grow-1 iconfont icon-dianhua"></text>
        <text class="flex-grow-3">{{phoneNum}}</text>
        <view class="index-schoolInfo-icon flex-grow-1 iconfont icon-qianjin-copy"></view>
      </view>
      <view class="index-schoolInfo-item">
        <text class="index-schoolInfo-icon flex-grow-1 iconfont icon-tupian"></text>
        <text class="flex-grow-3">驾校照片</text>
      </view>
       <view class="index-schoolInfo-image">
        <block wx:for="{{imageList}}">
         <image src="{{item}}" catchtap="previewImage"></image>
        </block>
        </view>
  </view>
</view>