/* pages/test/test.wxss */
page{
  background-color: #efefef;
}

.orderList{
  padding: 20rpx;
  background-color: #fff;
}

.content{
  flex: none;
  display: flex;
}

.content .item {
  flex: 1 1 auto;
}

.content .item image{
  width:100rpx;
  height: 100rpx;
}

.content .detail{
  flex: 8 1 auto;
}

.content .restaurant{
  display: flex;
}

.content .restaurant .name{
  flex:3 1 auto;
}

.content .restaurant .status{
  flex: 1 1 auto;
  font-size: 12px;
}

.content .detail .time{
  color:#777;
  font-size:10px;
  padding: 10rpx 0;
  border-bottom: 1px solid #ccc;
}

.content .detail .dash{
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 12px;
  color: #777;
}

.content .detail .dash .name{
  flex: 8 1 auto;
}

.content .detail .dash .price{
  flex: 1 1 auto;
}

.btn-area{
  border-top: 1px solid #ccc;
  text-align:right;
  padding: 20rpx 0;
}

.btn-area button{
  height: 65rpx;
  line-height: 65rpx;
  background-color: #fff;
  font-size: 12px;
  border-radius: 0;
}
.btn-area button::after{
  content: none;
}

.btn-area .again{
  border: 1px solid #0099ff;
  color: #0099ff;
  margin-right: 10rpx;
}

.evaluate{
  border: 1px solid orange;
  color: orange
}